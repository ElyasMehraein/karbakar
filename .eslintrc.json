{
  "root": true,
  "extends": [
    "next/core-web-vitals",
    "prettier"
  ],
  "plugins": [
    "prettier",
    "react-hooks"
  ],
  "rules": {
    "prettier/prettier": "warn",
    "no-unused-vars": "off",
    "no-console": [
      "warn",
      {
        "allow": ["warn", "error", "info", "log"]
      }
    ],
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "@next/next/no-img-element": "warn",
    "react/no-children-prop": "warn",
    "semi": ["error", "never"]
  }
} 